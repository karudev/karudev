{% extends "::base.html.twig" %}
{% block body %}
    <section id="main" role="main">

        <div class="breadcrumb-container">
            <div class="row">
                <div class="large-12 column">
                    <nav class="breadcrumbs animated bounceInDown">
                        <a href="{{path('home')}}">Home</a>
                        <a class="current" href="#">CONTACT</a>
                    </nav>
                </div>
            </div>
        </div>
        {% if success == true %}
        <div data-alert class="alert-box info text-center ">
            Votre email a bien été envoyé
            <a href="#" class="close">&times;</a>
        </div>
        {% endif %}
        {% if errors|length > 0 %}
        <div data-alert class="alert-box alert text-center ">
            {% for e in errors %}
                <p>{{e}}</p>
            {% endfor %}
            <a href="#" class="close">&times;</a>
        </div>
        {% endif %}
        <section class="part">

            <div class="row title">
                <div class="large-12 column">

                    <h6>Contact</h6>
                </div>
            </div>

            <div class="row">
                <div class="large-12 column">
                    <div class="large-2 column"></div>
                    <div class="large-10 column ">
                        <p>
                            Vous avez des questions ou désirez un devis adapté à votre projet.<br/>
                            N'hésitez pas, contactez nous via le formulaire de contact.<br/>
                            Nous vous répondrons le plus vite que possible.
                        </p>
                        <img src="images/photos/about.jpg" alt="">
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="large-12 column">

                    <form action="" method="post">
                        <div class=" large-12 column">
                            <div class="large-2 column"><label>Nom * :</label></div>
                            <div class="large-4 column"><input class=" required" name="lastname" type="text"/></div>
                            <div class="large-2 column"><label>Prénom * :</label></div>
                            <div class="large-4 column"><input class=" required" name="firstname" type="text"/></div>

                        </div>

                        <div class="large-12 column">
                            <div class="large-2 column"><label>Société :</label></div>
                            <div class="large-4 column"><input class="" name="company" type="text"/></div>
                            <div class="large-2 column"><label>Email * :</label></div>
                            <div class="large-4 column"><input class="required" name="email" type="email"/></div>

                        </div>

                        <div class=" large-12 column">
                            <div class="large-2 column"><label>Objet :</label></div>
                            <div class="large-10 column">
                                <select name="subject" class="">


                                    <option {{objet =='crm' ? 'selected'}}>Application/CRM</option>
                                    <option {{objet =='e-commerce' ? 'selected'}}>Pack e-commerce</option>
                                    <option {{objet =='presentation-societe' ? 'selected'}}>Pack présentation de société</option>
                                    <option {{objet =='mission' ? 'selected'}}>Proposition de mission</option>
                                    <option {{objet =='devis' ? 'selected'}}>Demande de devis</option>
                                    <option {{objet =='informations' ? 'selected'}}>Prise d'informations</option>
                                    <option {{objet =='autres' ? 'selected'}}>Autres</option>

                                </select>
                            </div>


                        </div>
                        <div class="col-lg-12 column">
                            <div class="large-2 column"></div>
                            <div class="large-10 column">
                                <textarea  name="message" class="required"></textarea>
                                <label>* Les champs précédés d'un astérique sont obligatoires</label>
                            </div>


                        </div>
                        <div class=" col-lg-12 column">
                            <div class="large-2 column"></div>
                            <div class="large-10 column text-center">
                                <button type="submit" class="red">Envoyer</button>
                            </div>
                        </div>

                </div>

                </form>
            </div>
            </div>
        </section>


    </section>
{% endblock %}
